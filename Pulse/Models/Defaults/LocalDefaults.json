{
    "keywords": {
        "view_titles": {
            "user_stream": "Home",
            "discover": "Discover",
            "notifications": "Notifications",
            "my_profile": "My Profile"
        }
    },
    "post": {
        "img_height": {
            "min": 100,
            "max": 200
        },
        "max_length": 300
    },
    "camp": {
        "score_threshold": 5,
        "members_threshold": 3
    },
    "feed": {
        "motd": {
            "title": "v1.0.3 is out!",
            "text": "You are using an outdated version of Bonfire! Update now",
            "image_url": "https://cdn.bonfire.camp/motd/upgrade_motd.jpeg",
            "cta": {
                "type": "url",
                "action_url": "",
                "display_text": "Download"
            }
        }
    },
    "logging": {
        "insights": {
            "impressions": {
                "batching": {
                    "max_timeframes": 120,
                    "max_length_hrs": 24
                }
            }
        }
    },
    "notifications": {
        "1": {
            "string_parts": [
                "$actioner.username",
                " started following you."
            ],
            "action_object": "actioner"
        },
        "2": {
            "string_parts": [
                "$actioner.username",
                " approved your request to join ",
                "$camp.title",
                "."
            ],
            "action_object": "camp"
        },
        "3": {
            "string_parts": [
                "$actioner.username",
                " requested to join ",
                "$camp.title",
                "."
            ],
            "action_object": "camp"
        },
        "4": {
            "string_parts": [
                "$actioner.username",
                " replied to your post."
            ],
            "action_object": "reply_post"
        },
        "5": {
            "string_parts": [
                "$actioner.username",
                " sparked your post."
            ],
            "action_object": "post"
        },
        "6": {
            "string_parts": [
                "New post by ",
                "$actioner.username",
                "."
            ],
            "action_object": "post"
        },
        "7": {
            "string_parts": [
                "$actioner.username",
                " invited you to join ",
                "$camp.title",
                "."
            ],
            "action_object": "camp"
        },
        "8": {
            "string_parts": [
                "$actioner.username",
                " mentioned you in their post."
            ],
            "action_object": "post"
        },
        "9": {
            "string_parts": [
                "$actioner.username",
                " posted in ",
                "$camp.title",
                "."
            ],
            "action_object": "post"
        }
    }
}
